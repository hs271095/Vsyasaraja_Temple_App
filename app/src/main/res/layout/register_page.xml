<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" Register with your details"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginEnd="13dp"
        android:id="@+id/textView13"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:text="Enter Name"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_com_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif"
        android:id="@+id/et_com_name"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout5"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:text="Email ID"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout3"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_email"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/et_email"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"
        tools:layout_conversion_absoluteX="114dp"
        tools:layout_conversion_absoluteY="157dp"
        tools:layout_conversion_absoluteWidth="237dp"
        tools:layout_conversion_absoluteHeight="42dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/constraintLayout3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_com_name" />


    <TextView
        android:text="Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="228dp"
        tools:layout_conversion_absoluteWidth="111dp"
        tools:layout_conversion_absoluteHeight="18dp"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif"
        android:id="@+id/et_password"
        android:inputType="textVisiblePassword"
        tools:layout_conversion_absoluteX="143dp"
        tools:layout_conversion_absoluteY="215dp"
        tools:layout_conversion_absoluteWidth="60dp"
        tools:layout_conversion_absoluteHeight="42dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/password"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />


    <TextView
        android:text="Enter Phone Number"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="754dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteHeight="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_phone" />

    <EditText
        android:inputType="phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/et_phone"
        android:fontFamily="sans-serif"
        tools:layout_conversion_absoluteX="24dp"
        tools:layout_conversion_absoluteY="741dp"
        tools:layout_conversion_absoluteWidth="336dp"
        tools:layout_conversion_absoluteHeight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/phone"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Register"
        android:textColor="@color/colorPrimary"
        android:id="@+id/register_but"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/et_phone" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter OTP here"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone"
        android:id="@+id/otp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/register_but" />

    <Button
        android:text="Verify"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVerifyOTP"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/otp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.13" />


</android.support.constraint.ConstraintLayout>